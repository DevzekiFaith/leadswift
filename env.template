# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# LinkedIn API Configuration
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Upwork API Configuration  
UPWORK_API_KEY=your_upwork_api_key

# Crunchbase API Configuration
NEXT_PUBLIC_CRUNCHBASE_API_KEY=https://api.crunchbase.com/v4/data/

# Twitter API Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# RapidAPI Configuration (for multiple APIs)
RAPIDAPI_KEY=your_rapidapi_key

# Apollo.io API Configuration
APOLLO_API_KEY=your_apollo_api_key

# Hunter.io API Configuration (for email verification)
